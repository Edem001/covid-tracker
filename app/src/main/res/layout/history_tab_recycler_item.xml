<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layout_marginBottom="25dp"
    android:background="@drawable/material_surface_rounded_background"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:elevation="5dp"
    android:padding="15dp">

    <TextView
        android:id="@+id/history_recycler_item_region_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="?fontFamily"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/history_recycler_item_region_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/history_recycler_item_region_name"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/item_gray_background"
        android:elevation="6dp"
        android:padding="10dp"
        android:textSize="14sp" />

</RelativeLayout>