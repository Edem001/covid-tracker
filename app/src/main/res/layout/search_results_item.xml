<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_primary_rounded"
    android:padding="15dp"
    android:layout_marginBottom="25dp"
    android:elevation="2dp">

    <TextView
        android:id="@+id/search_result_item_region_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fontFamily="?fontFamily"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/search_result_item_region_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_result_item_region_name"
        android:textSize="14sp"
        android:padding="10dp"
        android:background="@drawable/item_gray_background"
        android:elevation="5dp"/>

</RelativeLayout>